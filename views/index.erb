<h1>
  Hit the <%= human_name %>!<sup><a href="#" id="why">why?</a></sup>
</h1>
<div id="tux">
  <a href="/<%= params[:name] %>/hit" title="Hit the <%= human_name %>!">
    <img src="/<%= name %>.png" alt="This is <%= human_name %>!">
  </a>
</div>
<p id="clicks">
  <%= human_name %> has been hit <span><%= clicks %></span>
  <a href="http://www.twitter.com/home?status=<%= human_name %>+has+been+hit+<%= clicks %>+times.+<%= URL %><%= name %>/hit">
    <img src="/twitter_icon16.png" alt="Twitter" />
  </a> times
  <br />
  <a href="/contest">Contest</a>
</p>

<div id="fun">
  <div id="arrow"></div>
  &mdash; Just for fun!
</div>